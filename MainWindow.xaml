<Window x:Class="DrawPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawPaint"
        mc:Ignorable="d"
        Title="DrawPaint"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>

        <!-- Left toolbar -->
        <StackPanel Grid.Column="0"
                    Background="#EEE"
                    VerticalAlignment="Stretch">
            <Border x:Name="Black"
                    Height="30"
                    Width="30"
                    Margin="5"
                    Background="Black"/>
            <Border x:Name="Red"
                    Height="30"
                    Width="30"
                    Margin="5"
                    Background="Red"/>
            <Border x:Name="Blue"
                    Height="30"
                    Width="30"
                    Margin="5"
                    Background="Blue"/>
            <Border  x:Name="Green"
                     Height="30"
                     Width="30"
                     Margin="5"
                     Background="Green"/>
        </StackPanel>

        <Canvas Grid.Column="1"
                x:Name="DrawingCanvas"
                Background="White"
                MouseLeftButtonDown="Canvas_MouseLeftDown"
                MouseRightButtonDown="Canvas_MouseRightDown"
                MouseMove="Canvas_MouseMove"
                MouseUp="Canvas_MouseUp"/>

        <!-- Debug helper TextBox -->
        <TextBox Grid.Column="3"
                 x:Name="DebugTextBox"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Width="200"
                 Height="100"
                 Margin="10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="12"
                 Background="Black"
                 Foreground="Lime"/>
    </Grid>
</Window>
